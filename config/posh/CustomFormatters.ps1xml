<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
<ViewDefinitions>
<View>
    <Name>ErrorInstance</Name>
    <OutOfBand />
    <ViewSelectedBy>
        <TypeName>System.Management.Automation.ErrorRecord</TypeName>
    </ViewSelectedBy>
    <CustomControl>
        <CustomEntries>
            <CustomEntry>
                <CustomItem>
                    <ExpressionBinding>
                        <ScriptBlock>
                            $_.tostring()
                        </ScriptBlock>
                    </ExpressionBinding>
                </CustomItem>
            </CustomEntry>
        </CustomEntries>
    </CustomControl>
</View>
</ViewDefinitions>
</Configuration>
