fontlog = Consolas,8,-1,5,50,0,0,0,0,0
fontoutputlog = Consolas,8,-1,5,50,0,0,0,0,0
tabwidth = 4
workbench.single = True
fontlist = MS Shell Dlg 2,8,-1,5,50,0,0,0,0,0
initialrevision = workingdir
graphopt = True


