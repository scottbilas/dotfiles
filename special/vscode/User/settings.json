// setup:
//
// mklinkd -link ~\scoop\persist\vscode-portable\data\user-data\User ~\dotfiles\special\vscode\User
{
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[powershell]": {
        "editor.codeLens": false
    },
    "[plaintext]": {
        "editor.quickSuggestions": false // often annoying in a txt file - picks random stuff to be helpful, is too aggressive
    },
    "bashIde.explainshellEndpoint": "http://10.99.98.3:5000",
    "bracket-pair-colorizer-2.colors": [ // roughly matching indentRainbow.colors
        "#A4A456",
        "#72A472",
        "#A472A4",
        "#569898"
    ],
    "bracket-pair-colorizer-2.excludedLanguages": [
        "t4",
    ],
    "breadcrumbs.enabled": true,
    "C_Cpp.default.compilerPath": "clang",
    "cSpell.allowCompoundWords": true,
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        "**/vscode/User/settings.json",
    ],
    "cSpell.ignoreRegExpList": [
        "[./]\\w+",       // things that look like filenames/paths/extensions
        "@\\w+",          // usernames
        "\\W[Rr]'(?=\\w)" // raw format string prefixes
    ],
    "cSpell.userWords": [
        "Behaviour",
        "Behaviours",
        "Bilas",
        "Bilas's",
        "Boids",
        "Finalizers",
        "Fogbugz",
        "IDE's",
        "POSIX",
        "REPO",
        "Resilio",
        "Resizable",
        "Shouldly",
        "blittable",
        "coord",
        "cygwin",
        "datas",
        "deserialization",
        "deserialized",
        "devs",
        "dll's",
        "dotfiles",
        "dups",
        "executables",
        "fatals",
        "ffwd",
        "funcs",
        "globbing",
        "icase",
        "katana",
        "llvm",
        "minimap",
        "mkdir",
        "serializable",
        "struct",
        "structs",
        "submodules",
        "termux",
        "transcode",
        "uncrustify",
        "unexpanded",
        "untracked",
        "xplat"
    ],
    "diffEditor.renderSideBySide": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorSurroundingLines": 5,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.dragAndDrop": true,
    "editor.foldingStrategy": "indentation",
    "editor.fontFamily": "JetBrainsMono NF",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.lineNumbers": "off",
    "editor.matchBrackets": "never", // want rafamel.subtle-brackets to handle matching brackets instead
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 40,
    "editor.mouseWheelScrollSensitivity": 1,
    "editor.mouseWheelZoom": true,
    "editor.renderIndentGuides": false,
    "editor.roundedSelection": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestOnTriggerCharacters": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                // log.constant
                // log.date
                // log.debug
                // log.error
                // log.exception
                // log.info
                // log.string
                // log.exceptiontype
                // log.warning
                "scope": "log.constant",
                "settings": {
                    "foreground": "#DDD"
                }
            },
            {
                "scope": "keyword.control.bats",
                "settings": {
                    "foreground": "#b33ce2",
                    "fontStyle": "underline"
                }
            },
            {
                "scope": "support.function.bats",
                "settings": {
                    "foreground": "#d15353",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "support.variable.bats",
                "settings": {
                    "foreground": "#329432",
                    "fontStyle": "italic"
                }
            }
        ]
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.associations": {
        "config-*": "ini",
        "config": "ini",
        "hgrc-*": "ini",
        "hgrc": "ini",
        "ignore": "gitignore",
        ".hgignore": "gitignore",
        ".pylintrc": "ini",
        "*.asmdef": "json",
        "*.asset": "yaml",
        "*.buildsettings": "json",
        "*.linq": "csharp",
        "*.log": "log",
        "*.meta": "yaml",
        "*.prefab": "yaml",
        "*.ttinclude": "t4",
        "*.txt": "plaintext",
        "*.unity": "yaml",
        "*.uxml": "xml",
        "*.vssettings": "xml"
    },
    "files.autoSave": "off",
    "files.exclude": {
        // root folders
        ".hglf": true,

        // files
        "**/*.bak": true,
        "**/*.cache": true,
        "**/*.csproj.CopyComplete": true,
        "**/*.csproj.user": true,
        "**/*.idb": true,
        "**/*.ilk": true,
        "**/*.lib": true,
        "**/*.mdb": true,
        "**/*.meta": true,
        "**/*.obj": true,
        "**/*.orig": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.suo": true,
        "**/*FileListAbsolute.txt": true,

        // folders
        "**/.history": true,
        "**/.venv": true,
        "**/.vs": true,
        "**/__pycache__": true
    },
    "github.username": "scottbilas",
    "gitlens.advanced.messages": {
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": false
    },
    "gitlens.keymap": "chorded",
    "gitProjectManager.baseProjectsFolders": [
        "c:/work",
        "c:/proj",
        "d:/work",
        "d:/proj"
    ],
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "indentRainbow.excludedLanguages": [
        "t4",
    ],
    "indentRainbow.colors": [
        "rgba(255,255,64,0.03)",
        "rgba(127,255,127,0.03)",
        "rgba(255,127,255,0.03)",
        "rgba(79,236,236,0.03)"
    ],
    "json.schemas": [
        { "fileMatch": [ "*.asmdef" ], "url": "http://json.schemastore.org/asmdef" }
    ],
    "logFileHighlighter.customPatterns": [
        {
            "pattern": "error",
            "foreground": "#b40000",
        },
        {
            "pattern": ".*error.*",
            "background": "#3b0000",
        }
    ],
    "perforce.addOnFileCreate": true,
    "perforce.deleteOnFileDelete": true,
    "perforce.editOnFileModified": true,
    "perforce.hideNonWorkspaceFiles": "hide changelists",
    //"powershell.developer.featureFlags": [ "PSReadLine" ],
    // ^ cannot enable currently, breaks debugging for some reason (need to investigate)
    "powershell.integratedConsole.showOnStartup": false,
    "problems.decorations.enabled": true,
    "rewrap.wrappingColumn": 120,
    "search.smartCase": true,
    "scm.defaultViewMode": "tree",
    "shellcheck.customArgs": [ "-x" ],
    "shellformat.flag": "-i 4 -s",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 0,
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.scrollback": 10000,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "salmon",
            "backgroundColor": "darkslategray",
            "overviewRulerColor": "yellow"
        }
    ],
    "ttProcessor.TTPath": "C:\\Users\\scott\\.dotnet\\tools\\t4.exe",
    "vsicons.dontShowNewVersionMessage": true,
    "window.autoDetectColorScheme": true,
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "inherit",
    "window.restoreFullscreen": true,
    "window.restoreWindows": "all",
    "window.title": "${rootName}${separator}${dirty}${activeEditorMedium}${separator}",
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#242424"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.panel.defaultLocation": "right",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
}
